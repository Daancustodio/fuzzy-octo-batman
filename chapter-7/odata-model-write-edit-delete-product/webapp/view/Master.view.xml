<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sapui5.demo.odata.readingdata.bestpractice.controller.Master"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="productInfo"
		title="{= ${viewModel>/createMode} ? 'Create new Product' : 'Edit Product: ' + ${ID} }">
		<content>
			<Panel>
				<f:SimpleForm>
					
						<!-- Basic info -->
						<core:Title text="Product Information" />
						<Label text="Product ID" />
						<Input value="{ID}" enabled="{viewModel>/createMode}"/>
						<Label text="Product Label" />
						<Input value="{Name}" />
						<Label text="Description" />
						<TextArea value="{Description}" />
						<Label text="Product Release Date" />
						<DatePicker
							type="Date"
							value="{ReleaseDate}"
							valueFormat="short"/>
						<Label text="Price" />
						<Input value="{Price}" />
						<Label text="Product Rating" />
						<RatingIndicator
							iconSize="2.4rem"
							visualMode="Full"
							value="{Rating}" />
						<!-- Discontinued? -->
						<core:Title text="Discontinued" />
						<Label text="Discontinued?" />
						<CheckBox selected="{viewModel>/discontinued}" />
						<Label
							visible="{viewModel>/discontinued}"
							text="Discontinued Date" />
						<DateTimeInput
							type="Date"
							visible="{viewModel>/discontinued}"
							value="{DiscontinuedDate}" />
						<!-- Supplier & Category -->
						<core:Title text="Supplier and Category Info" />
						<Label text="Supplier" />
						<Select
							id="idSelectSupplier"
							items="{/Suppliers}"
							width="100%">
							<core:Item key="{ID}" text="{Name}" />
						</Select>
						<Label text="Product Category" />
						<Select
							id="idSelectCategory"
							items="{/Categories}"
							width="100%">
							<core:Item key="{ID}" text="{Name}" />
						</Select>
				</f:SimpleForm>
			</Panel>
		</content>
		<footer>
			<Bar>
				<contentRight>
                    <Button
                        icon="sap-icon://undo" 
                        press="onReset" 
                        text="Reset Changes"/>
                    <Button
                        icon="sap-icon://save" 
                        type="Accept" 
                        press="onSave" 
                        text="Save changes"/>
                    <Button
                        icon="sap-icon://delete" 
                        type="Reject" 
                        press="onDelete" 
                        visible="{= !${viewModel>/createMode} }"
                        text="Delete entry"/>
                </contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>